<div class="container">

  <div class="row">
    <%= form_with model: @article do |f| %>
      <div class="col">
        <%= f.label :title %>
        <%= f.text_field :title %>

      </div>

      <br />
      <br />
      <div class="col" id="form-content">
        <%= f.label :content %>
        <%= f.text_field :content %>
      </div>

      <br />
      <br />

      <div class="btn btn-green">
        <%= f.submit %>
      </div>

    <% end %>
  </div>
</div>
